
<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr>

<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<p>
  <strong>ImagePath:</strong>
  <img src="<%= @post.image_path %>"/>
</p>
<p>
  <strong>thumb_fill:</strong>
  <img src="<%= @post.image_path.thumb_fill %>"/>
</p>
<p>
  <strong>thumb_fit:</strong>
  <img src="<%= @post.image_path.thumb_fit %>"/>
</p>



<%= link_to '수정', edit_post_path(@post) , class: 'btn btn-warning text-white'%> 
<%= link_to '목록', cafe_path(@post.daum), class: 'btn btn-info' %>
<%= link_to '삭제', post_path(@post), method: 'delete', class: 'btn btn-danger'%><br/>


<!--댓글리스트-->

<hr>
<strong>reply</strong>
<hr>

<table class="table">
  <thead>
    <tr>
    
      <th scope="col">id</th>
      <th scope="col">Content</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
    <%@post.comments.each do |comment| %>
     <tr>
        <th><%=comment.id%></th>
        <td><%= comment.content %></td>
        <td><%=link_to '삭제','comments/#{comment.id}',method:'delete'%></td>
     </tr>
     <%end%>
  </tbody>
</table>
<%=render 'comments/form',post:@post%>